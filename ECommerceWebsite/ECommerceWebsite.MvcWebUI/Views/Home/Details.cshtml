@using ECommerceWebsite.MvcWebUI.Entity;
@model Product
@{
    ViewBag.Title = "Details";
}

<div class="row">
    <div class="col-md-6">
        <img src="/Theme/img/cameraphoto.png" class="img-fluid rounded">
    </div>
    <div class="col-md-6">
        <div class="row">
            <div class="col-md-12">
                <h1>@Model.ProductName</h1>
            </div>
        </div>
        <div class="row">
            <div class="col-md-12">
                <span class="badge badge-primary">In Stock</span>
                <span class="product-number">#123123412</span>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                <div id="description">
                    @Model.ProductDescription
                </div>
            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-4">
                <i class="fa-solid fa-star fa-fw"></i>
                <i class="fa-solid fa-star fa-fw"></i>
                <i class="fa-solid fa-star fa-fw"></i>
                <i class="fa-solid fa-star fa-fw"></i>
                <i class="fa-solid fa-star-half-stroke fa-fw"></i>
                <span class="badge badge-success">53</span>
            </div>
            <div id="write-review" class="col-md-4">
                <a href="#">
                    Write a review
                </a>

            </div>
        </div>
        <div class="row mt-3">
            <div class="col-md-12">
                <h4 id="product-price">@Model.ProductPrice TL</h4>
            </div>
        </div>
        <div class="row mt-2">
            <div class="col-md-12">
                <button class="btn btn-success">
                    <i class="fa-solid fa-cart-plus fa-fw"></i>
                    Add to cart
                </button>
            </div>
        </div>
    </div>
</div>
<div class="row mt-3">
    <div class="col-md-12">
        <div class="bd-example bd-example-tabs">
            <ul class="nav nav-tabs mb-3" id="pills-tab" role="tablist">
